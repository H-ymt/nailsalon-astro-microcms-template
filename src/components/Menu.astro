---
const nav = [
  { href: "/", label: "HOME" },
  { href: "/menu", label: "MENU" },
  { href: "/gallery", label: "GALLERY" },
  { href: "/access", label: "ACCESS" },
  { href: "/faq", label: "FAQ" },
];

const currentPath = Astro.url.pathname;
---

<nav class="nav">
  <ul class="list">
    {
      nav.map((item) => (
        <li
          class={`item ${currentPath === item.href ? "active" : ""}`}
          transition:persist
        >
          <a class="item-link" href={item.href}>
            {item.label}
          </a>
        </li>
      ))
    }
  </ul>
</nav>

<style lang="scss">
  .nav {
    display: none;

    @include mq(md) {
      display: block;
    }
  }

  .list {
    display: flex;
    gap: 20px;
    list-style-type: none;
  }

  .item {
    border-radius: 6px;
    transition: background-color 0.3s ease;
  }

  .item.active .item-link {
    background-color: var(--blue-200);
  }

  @media (hover: hover) {
    .item-link:hover {
      background-color: var(--blue-100);
      transition: background-color 0.3s ease;
    }
  }

  .item-link {
    padding: 6px 12px;
    color: inherit;
    border-radius: 6px;
    text-decoration: none;
  }
</style>
