---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<a href={href} class="button">
  <slot />
  <img
    src="/chevron-right-circle.svg"
    width="30"
    height="30"
    alt=""
    decoding="async"
    class="arrow"
  />
</a>

<style lang="scss">
  .button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    width: fit-content;
    height: 48px;
    padding-inline: 18px;
    color: inherit;
    font-size: 14px;
    text-decoration: none;
    border: 1px solid var(--color-text-muted);
    border-radius: 16px;
    transition: 0.3s ease;
  }

  .arrow {
    width: 24px;
    height: 24px;
    transform: translateX(0px);
    transition: 0.3s ease;
  }

  @media (hover: hover) {
    .button:hover .arrow {
      transform: translateX(1px);
      transition: 0.3s ease;
    }
  }
</style>
